{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.3.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": [ "languages.js", "background.js" ],
        "type": "module"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.png"
    },

    "permissions": ["activeTab", "tabs", "storage", "windows"],
    "host_permissions": ["https://translate.kagi.com/*", "https://translate.google.com/*"],
    
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'unsafe-inline' https://js.stripe.com; object-src 'self'; connect-src 'self' https://api.stripe.com https://checkout.stripe.com;"
    },
    
    "options_page": "options.html"
}
